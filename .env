# .env.example
# -------------------------------
# DO NOT store real secrets in this file.
# This is a template with placeholders only.
# Store real secrets in a secure secret manager (Vault, AWS Secrets Manager, Azure Key Vault, etc.)
# and inject at deploy/runtime. Add .env to .gitignore.
# -------------------------------

# App settings
APP_ENV=development                 # development | staging | production
APP_DEBUG=true                      # true | false
APP_URL=https://your-app.example.com

# Web server
PORT=3000

# Database
DB_CLIENT=postgres                  # postgres | mysql | mssql | sqlite
DB_HOST=db.example.internal
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=REPLACE_WITH_DB_PASSWORD

# Redis / Caching
REDIS_HOST=redis.example.internal
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD

# Message queue
RABBITMQ_URI=amqp://user:REPLACE_WITH_RABBITMQ_PW@rabbitmq.example:5672/vhost

# External APIs
PROOFPOINT_API_KEY=REPLACE_WITH_PROOFPOINT_KEY
PROOFPOINT_API_SECRET=REPLACE_WITH_PROOFPOINT_SECRET

# Cloud provider credentials (do NOT store long-term keys in repo)
CLOUD_PROVIDER=aws                  # aws | azure | gcp
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET
AWS_REGION=eu-west-1

# OAuth / SSO
OKTA_CLIENT_ID=REPLACE_WITH_OKTA_CLIENT_ID
OKTA_CLIENT_SECRET=REPLACE_WITH_OKTA_CLIENT_SECRET
OKTA_ISSUER=https://your-org.okta.com/oauth2/default

# SMTP (email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=REPLACE_WITH_SMTP_PASSWORD
SMTP_FROM="Security Ops <secops@example.com>"

# Secrets / signing keys
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_STRING
SECRET_KEY_BASE=REPLACE_WITH_LONG_RANDOM_STRING

# Sentry / monitoring
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN

# 3rd party integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/REPLACE/ME/PLACEHOLDER
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/REPLACE

# Storage / backups
B2_BUCKET_NAME=your-backup-bucket
B2_KEY_ID=REPLACE_WITH_B2_KEY_ID
B2_APPLICATION_KEY=REPLACE_WITH_B2_APP_KEY

# SSH / keys (store as files and reference paths, do not inline private keys in env if possible)
SSH_PRIVATE_KEY_PATH=/secrets/ssh/id_rsa      # or mount via secret volume
SSH_PASSPHRASE=REPLACE_WITH_PASSPHRASE

# Paths to JSON credential files (e.g., GCP service account)
GOOGLE_SERVICE_ACCOUNT_JSON=/secrets/gcp/service-account.json

# Feature flags
FEATURE_NEW_CORRELATION=false

# Auditing / compliance
AUDIT_LOGGING=true
AUDIT_S3_BUCKET=audit-logs-bucket

# Example placeholders for any additional secret
CUSTOM_API_TOKEN=REPLACE_WITH_TOKEN

# End of file